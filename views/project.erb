<h1><%= @project.title() %></h1>

<p>
  <a href="/projects/<%= @project.id() %>/edit">Edit Project</a>
</p>

<% if @project.volunteers().any?() %>
  <h3>Here are all the volunteers for this project:</h3>
  <ul>
    <% @volunteers.each() do |volunteer| %>
    <li><% volunteer.name() %></li>
    <% end %>
  </ul>
  <% else %>
    <p>There are no volunteers on this project.</p>
<% end %>

<h4>Add a new volunteer to this Project</h4>
<form action="/projects/<%= @project.id %>" method="post">
  <input id="project_id" type="hidden" name="project_id" value="<%= @project.id() %>">
  <label for="name">Volunteer Name:</label>
  <input id="name" type="text" name="name">
  <button type="button">Add Volunteer</button>
</form>

<div class="container">
  <a href="/">Home</a>
</div>
